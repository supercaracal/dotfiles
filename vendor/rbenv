#!/bin/bash

export RBENV_SHELL=bash

source "$HOME/.rbenv/libexec/../completions/rbenv.bash"

rbenv rehash 2>/dev/null

function rbenv() {
  local command
  command="$1"
  if [ "$#" -gt 0 ]; then
    shift
  fi
  case "$command" in
  rehash|shell)
    eval "`rbenv "sh-$command" "$@"`";;
  *)
    command rbenv "$command" "$@";;
  esac
}
