export HISTSIZE=10000
export EDITOR=$(which vim)

alias ll='ls -alF'

if [[ -e $HOME/.Xmodmap ]]; then
  xmodmap $HOME/.Xmodmap
fi

if [[ -n $(find /usr/share/terminfo -name 'gnome-256color') ]]; then
  export TERM='gnome-256color'
fi

if [[ -d /usr/local/heroku/bin ]]; then
  export PATH="/usr/local/heroku/bin:$PATH"
fi

if [[ -d $HOME/vcs/tmux-powerline ]]; then
  export TMUX_POWERLINE_SEG_WEATHER_LOCATION='26235342'
  export TMUX_POWERLINE_PATH="$HOME/vcs/tmux-powerline"
fi

if [[ -d /usr/lib/jvm/java-7-oracle ]]; then
  export JAVA_HOME="/usr/lib/jvm/java-7-oracle"
fi

if [[ -d $HOME/.rbenv ]]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init -)"
fi

if [[ -d $HOME/.ndenv ]]; then
  export PATH="$HOME/.ndenv/bin:$PATH"
  eval "$(ndenv init -)"
fi

if [[ -d $HOME/.jenv ]]; then
  export PATH="$HOME/.jenv/bin:$PATH"
  eval "$(jenv init -)"
fi

if [[ -d $HOME/.gotools ]]; then
  export GOPATH="$HOME/.gotools"
fi

if [[ -d $HOME/.embulk ]]; then
  export PATH="$HOME/.embulk/bin:$PATH"
fi
